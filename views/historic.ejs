  <script>
    let chart;
    let allData = [];
    let currentRange = '30';
    let chartType = 'line';
    const stockSymbol = '<%= stock %>';
    let colorBlindMode = false;
    

    // Set update date
    document.getElementById('updateDate').textContent = new Date().toLocaleDateString('en-US', {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });

    // Load historical data from API
    fetch(`/api/historical/${stockSymbol}`)
      .then(response => {
        if (!response.ok) {
          throw new Error('API response error: ' + response.status);
        }
        return response.json();
      })
      .then(data => {
        // Remove loading message
        document.querySelector('#chart').innerHTML = '';
        
        // Save all data
        allData = data.ohlc;
        
        // Load current day data by default
        filterHistoricalData(currentRange);
        
        // Update symbol information
        document.getElementById('symbolInfo').textContent = `Symbol: ${data.symbol} | ${allData.length} data periods`;
      })
      .catch(err => {
        console.error("Error loading historical data:", err);
        document.querySelector('#chart').innerHTML = 
          `<div class="error">Error loading data: ${err.message}. Make sure the API is running on localhost:5000</div>`;
      });

    // Add event listeners to time range buttons
    document.querySelectorAll('.time-btn').forEach(button => {
      button.addEventListener('click', function() {
        // Remove active class from all buttons
        document.querySelectorAll('.time-btn').forEach(btn => {
          btn.classList.remove('active');
          btn.classList.remove('loading');
        });
        
        // Add active class to clicked button
        this.classList.add('active');
        
        // Get selected range
        const range = this.getAttribute('data-days');
        currentRange = range;
        
        // If it's 1 day, load real-time data
        if (range === '1') {
          this.classList.add('loading');
          loadTodayData();
        } else {
          // For other ranges, use historical data
          filterHistoricalData(range);
        }
      });
    });

    // Add event listeners to chart type buttons
    document.querySelectorAll('.chart-btn').forEach(button => {
      button.addEventListener('click', function() {
        // Remove active class from all buttons
        document.querySelectorAll('.chart-btn').forEach(btn => {
          btn.classList.remove('active');
        });
        
        // Add active class to clicked button
        this.classList.add('active');
        
        // Get selected chart type
        chartType = this.getAttribute('data-type');
        
        // Re-render chart with new type
        if (currentRange === '1') {
          loadTodayData();
        } else {
          filterHistoricalData(currentRange);
        }
      });
    });

    // Function to load today's data
    function loadTodayData() {
      fetch(`/api/today/${stockSymbol}`)
        .then(response => {
          if (!response.ok) {
            throw new Error('API response error: ' + response.status);
          }
          return response.json();
        })
        .then(data => {
          // Remove loading state from button
          const loadingBtn = document.querySelector('.time-btn.loading');
          if (loadingBtn) loadingBtn.classList.remove('loading');
          
          // Show market information
          document.getElementById('marketInfo').innerHTML = `
            Market open: ${new Date(data.marketOpen).toLocaleDateString('en-US')} | 
            Last update: ${new Date(data.lastUpdate).toLocaleTimeString('en-US')} |
            Interval: ${data.interval}
          `;
          
          // Check if there is data
          if (!data.dataPoints || data.dataPoints.length === 0) {
            document.querySelector('#chart').innerHTML = 
              '<div class="error">No data available for today</div>';
            document.getElementById('statsContainer').innerHTML = '';
            return;
          }
          
          // Convert dataPoints to OHLC format
          const ohlcData = data.dataPoints.map(point => {
            return {
              date: point.date,
              open: point.open,
              high: point.high,
              low: point.low,
              close: point.close,
              volume: point.volume
            };
          });
          
          // Render chart and statistics
          renderChart(ohlcData);
          updateStats(ohlcData);
        })
        .catch(err => {
          console.error("Error loading today's data:", err);
          const loadingBtn = document.querySelector('.time-btn.loading');
          if (loadingBtn) loadingBtn.classList.remove('loading');
          document.querySelector('#chart').innerHTML = 
            `<div class="error">Error loading today's data: ${err.message}</div>`;
        });
    }

    // Function to filter historical data
    function filterHistoricalData(range) {
      let filteredData = [];
      
      if (range === 'max') {
        filteredData = allData;
      } else {
        const days = parseInt(range);
        const cutoffDate = new Date();
        cutoffDate.setDate(cutoffDate.getDate() - days);
        
        filteredData = allData.filter(item => {
          return new Date(item.date) >= cutoffDate;
        });
      }
      
      // Hide market information for historical data
      document.getElementById('marketInfo').innerHTML = '';
      
      // Update chart and statistics
      renderChart(filteredData);
      updateStats(filteredData);
    }

    // Function to format numbers to 2 decimals
    function formatToTwoDecimals(value) {
      return parseFloat(value.toFixed(2));
    }

    // Function to render chart
    function renderChart(ohlcData) {
      // Check if there is data
      if (!ohlcData || ohlcData.length === 0) {
        document.querySelector('#chart').innerHTML = 
          '<div class="error">No data available for the selected range</div>';
        return;
      }
      
      // Sort data by date (oldest to newest)
      ohlcData.sort((a, b) => new Date(a.date) - new Date(b.date));
      
      let seriesData;
      let seriesConfig;
      
      if (chartType === 'candlestick') {
        // Prepare data for candlestick chart - CORRECTED FORMAT
        seriesData = ohlcData.map(d => {
          return {
            x: new Date(d.date),
            y: [
              formatToTwoDecimals(d.open),
              formatToTwoDecimals(d.high),
              formatToTwoDecimals(d.low),
              formatToTwoDecimals(d.close)
            ]
          };
        });
        
        seriesConfig = [{
          name: 'Price',
          type: 'candlestick',
          data: seriesData
        }];
      } else {
        // Prepare data for line chart (use closing price)
        seriesData = ohlcData.map(d => {
          return {
            x: new Date(d.date),
            y: formatToTwoDecimals(d.close)
          };
        });
        
        seriesConfig = [{
          name: 'Closing Price',
          type: 'line',
          data: seriesData
        }];
      }

      const lastClose = formatToTwoDecimals(ohlcData[ohlcData.length - 1].close);
      const firstOpen = formatToTwoDecimals(ohlcData[0].open);
      
      const titleText = currentRange === '1' 
        ? `IBM - Today's prices (${ohlcData.length} periods)` 
        : `IBM - Historical prices (${ohlcData.length} periods)`;
      
      const options = {
        chart: {
          type:  'line',
          height: 500,
          animations: {
            enabled: false
          },
          toolbar: {
            show: true,
            tools: {
              download: true,
              selection: true,
              zoom: true,
              zoomin: true,
              zoomout: true,
              pan: true,
              reset: true
            }
          },
          events: {
            // Capture chart errors
            mounted: function(ctx, config) {
              console.log('Chart mounted correctly');
            },
            updated: function(ctx, config) {
              console.log('Chart updated correctly');
            },
            // Handle errors
            error: function(err) {
              console.error('Chart error:', err);
              document.querySelector('#chart').innerHTML = 
                '<div class="error">Error rendering chart. Trying with line chart...</div>';
              // Try with line chart as fallback
              if (chartType === 'candlestick') {
                chartType = 'line';
                document.querySelector('.chart-btn[data-type="line"]').click();
              }
            }
          }
        },
        series: seriesConfig,
        xaxis: {
          type: 'datetime',
          labels: {
            datetimeFormatter: {
                day: 'dd MMM',
                month: 'MMM yyyy',
                hour: 'HH:mm'
            }
          }
        },
        yaxis: {
          tooltip: {
            enabled: true
          },
          labels: {
            formatter: function(val) {
              return val.toFixed(2);
            }
          }
        },
        plotOptions: {
          candlestick: {
            colors: {
              upward: '#27ae60',
              downward: '#c0392b'
            },
            wick: {
              useFillColor: true
            }
          }
        },
        stroke: {
          width: chartType === 'line' ? 3 : undefined
        },
        colors: chartType === 'line' ? ['#2980b9'] : undefined,
        tooltip: {
          x: {
            format: currentRange === '1' ? 'HH:mm' : 'dd MMM yyyy HH:mm'
          },
          y: {
            formatter: function(value, { seriesIndex, dataPointIndex, w }) {
              if (chartType === 'candlestick') {
                // Verify data exists before accessing it
                if (w && w.config && w.config.series && w.config.series[seriesIndex] && 
                    w.config.series[seriesIndex].data && w.config.series[seriesIndex].data[dataPointIndex] &&
                    w.config.series[seriesIndex].data[dataPointIndex].y) {
